extends pug/base

block head
    title Блог
block content
    .maincontent
        section.section.blog    
            header.header
                .header__socials
                    include pug/socials.pug
                .header__menu 
                    include icons/hamburger.svg
                .photo
                    img.photo__jpg(src='img/me.jpg')
                h1.section__title Блог
                p.header__text Статьи, которые я написала         
            .contents.container
                aside.names
                    ul.names__list
                        li.names__item Заголовок статьи
                        li.names__item Очень длинный заголовок невероятно интересной статьи
                        li.names__item Заголовок статьи
                .contents__inner
                    article.article
                        h2.article__title Заголовок статьи
